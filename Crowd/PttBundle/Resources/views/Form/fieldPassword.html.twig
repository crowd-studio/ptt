	type: 'password',
	id: params.id ~ '_repeated',
	name: params.name ~ '[repeated]',	
	label: params.label is defined ? 'Repeat ' ~ params.label : false,
	size: params.size,
} %}

{% include 'PttBundle:Form:fieldInput.html.twig' %}