{% set validations = validations | default({}) | merge ({
	required: validations.required is defined ? validations.required : (app.request.get('id') == null) ,
	minlength: validations.minlength is defined ? validations.minlength : 6,
	maxlength: validations.maxlength is defined ? validations.maxlength : 20,
	equal: params.name
}) %}

{% set params = {
	size: 'medium'
} | merge (params) %}

