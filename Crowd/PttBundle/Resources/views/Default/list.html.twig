{% extends 'PttBundle:Default:base.html.twig' %}
{% block content %}
{% if page.title is defined %}
	<h1>{{page.title|trans}}</h1>
{% endif %}
{% if sortable %}<div class="sortable-list">{% endif %}
	<ul class="nav nav-pills">
		<li class="active">
			{% if sortable %}
				<a class="btn btn-sort-list btn-sort" data-order="{{'order'|trans}}" data-edit="'{{'edit'|trans}}">{{'order'|trans}}</a>
			{% endif %}
			{% if csvexport %}
				<a href="" class="btn-cancel">Exportar</a>
			{% endif %}
			<a href="{{ path('create', {entity: entityConfigurationInfo.entityName}) }}">{{'create'|trans}} {{entityInfo.lowercase}}</a>
		</li>
	</ul>

	{% if filters|length > 0 %}
		<div class="well filters">
			<form action="{{ path('list', {entity : entityConfigurationInfo.entityName}) }}" method="post" name="filter-{{ entityConfigurationInfo.entityName }}" class="row" style="margin:0;padding:0;">
			{% for key,filter in filters %}
				{% if filter.type == 'text' %}
					<div class="form-group col-xs-12 col-sm-12 col-md-12" style="margin:0;">
						<label for="filter-{{ entityConfigurationInfo.entityName }}-{{ key }}">{{ filter.label }}</label>
						<input class="form-control" type="text" id="filter-{{ entityConfigurationInfo.entityName }}-{{ key }}" name="filter-{{ entityConfigurationInfo.entityName }}-{{ key }}" placeholder="{{ filter.label }}" value="{{ filter(key, entityConfigurationInfo.entityName) }}">
					</div>
				{% endif %}
			{% endfor %}
			<div class="form-group submit col-xs-12" style="margin-top:20px;text-align:end">
				<button type="submit" class="btn btn-save">{{'filter'|trans}}</button>
				<a href="{{ path('list', {entity : entityConfigurationInfo.entityName, filter:'reset'}) }}" class="btn btn-cancel">{{'reset_filters'|trans}}</a>
			</div>
			</form>
		</div>
	{% endif %}

	{% if rows|length > 0 %}


	<ul {% if sortable %} id="sortable-with-handles" class="sortable table" {% else %} class="table"{% endif %}>
		<li class="head">
			{%if sortable %}<span class="handle hidden">Order</span>{% endif %}
	            {% for field, title in fields %}
	            <span {% if field == 'title' %}class="hidden-xs big" {% else %} class="hidden-xs"{% endif %}>{% if sortable == false %}<a href="{{ path('list', {entity : entityConfigurationInfo.entityName, order : field}) }}">{% endif %}
	            {{title}}{%if sortable == false %}</a>{% endif %}</span>
	            {% endfor %}
	            <span class="actions"></span>
		</li>
		{% for row in rows %}
		        <li class="list" {%if sortable %}data-id="{{row.id}}"{% endif %}>
	        	{% if sortable %}<span class="handle hidden"></span>{% endif %}

		            {% for field, title in fields %}
		             <span {% if field == 'title' %}class="hidden-xs big" {% else %} class="hidden-xs"{% endif %}>
		            	{% if row|dynamicValue(field).timestamp is defined %}
		            		{{ row|dynamicValue(field).date|date("d/m/Y") }}
		            	{% else %}
		            		{{ row|dynamicValue(field) }}
		            	{% endif %}</span>
		            {% endfor %}
		            <span class="actions">
		                <div class="btn-group">
		                    <a href="{{ path('edit', {entity : entityConfigurationInfo.entityName, id : row.id}) }}" class="list-editar"></a>
		                    <a href="{{ path('delete', {entity : entityConfigurationInfo.entityName, id : row.id}) }}" data-alert='{{ 'delete_the_entity_name'|trans([entityInfo.lowercase, row]) }}' class="list-eliminar"></a>
		                </div>
		            </span>
		        </li>

		 {% endfor %}
	 </ul>

	{% include 'PttBundle:Default:pagination.html.twig' %}

	{% else %}

	<p>{{'no_results_found'|trans}}</p>

	{% endif %}
{% if sortable %}</div>{% endif %}
{% endblock %}