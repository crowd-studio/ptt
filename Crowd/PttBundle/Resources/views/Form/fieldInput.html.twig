{%- if params -%}
	{% import 'PttBundle:Default:utilities.html.twig' as utilities %}

	{% set params = {
		type: "text",
		name: false,
		id: false,
		value: false,

		label: false,
		placeholder: false,
		errors: true,
		disabled: false,

		outterClass: false,
		elementClass: false,
		size: 'long',

		attr : false,
		addon: false,

	} | merge (params) %}

	{% set validations = {
		mapped: true,
		required: false,
		minlength: false,
		maxlength: false,
		equal: false,
	} | merge (validations | default({}) )  %}

	{%- if params.type != 'hidden' -%}
	<div class="form-group {{utilities.getSize(params.size)}}{{ params.outterClass ? ' ' ~ params.outterClass : '' }}">
	{%- endif -%}
		
		{%- if params.label and params.label != "" -%}
			<label{{ utilities.attr('for', params.id) }}>{{ params.label }}{{ validations.required ? ' *' : '' }}</label>
		{%- endif -%}
		{%- if params.type != 'hidden' and params.errors -%}
		<div class="errors" {{- ( params.id is defined ? ' id="error-' ~ params.id ~ '"' : '' ) | raw -}}></div>
		{%- endif -%}
		{%- if params.addon -%}
			<div class="input-group">
		{%- endif -%}
			<input class="form-control{{ params.elementClass ? ' ' ~ params.elementClass : '' }}"{{ utilities.attrGroup([ ['type', params.type], ['name', params.name], ['placeholder', params.placeholder], ['value', params.value], ['id', params.id], ['data-parsley-errors-container', params.errors ? '#error-' ~ params.id : false ],['maxlength', validations.maxlength],['minlength', validations.minlength], ['disabled', params.disabled] ]) }}{{ ( validations.equal ? ' data-parsley-equalto="#' ~ validations.equal ~ '"' : '') | raw }}{{ params.attr ? utilities.attrGroup(params.attr)}} {{ validations.required ? ' required' : '' }}>
		{%- if params.addon -%}
				<span class="input-group-addon">
					<span class="{#{ params.addon }#}"></span>
				</span>
			</div>
		{%- endif -%}
		
	{%- if params.type != 'hidden' -%}
	</div>
	{%- endif -%}
{%- endif -%}
